<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="br.com.johabfreitas.agenda.fx.MainController">
	
	<center>
		<Label BorderPane.alignment="CENTER" text="Região central"></Label>
	</center>
	<top>
	<!-- 	HBox coloca todos elementos do seu interior um ao lado do outro -->
		<HBox>
			<children>
				<Label text="Cabeçalho"></Label>
				<Button text="Botão"></Button>
			</children>
			<children>
				<Label text="Cabeçalho"></Label>
				<Button text="Botão"></Button>
			</children>			
		</HBox>
	</top>
	<bottom>
		<StackPane BorderPane.alignment="CENTER_RIGHT">
			<children>
				<Circle fill="DODGERBLUE" radius="10.0" stroke="BLACK" StackPane.alignment="CENTER_RIGHT"></Circle>
				<Label text="?" StackPane.alignment="CENTER_RIGHT"></Label>
			</children>
		</StackPane>		
	</bottom>
	<left>
		<VBox>
		<children>
			<Button text="Menu 1"></Button>
			<Button text="Menu 2"></Button>
			<Label text="Isso é um label"></Label>
			<Button text="Menu 3"></Button>
		</children>
